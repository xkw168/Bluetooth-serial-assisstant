<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.xkw.bluetooth.TextFragment">

    <TextView
        android:id="@+id/tv_data_rec_text"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginBottom="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="8sp"
        android:layout_weight="4"
        android:scrollbarFadeDuration="200"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:background="@drawable/tv_border"/>

    <LinearLayout
        android:id="@+id/ll_send_field_text"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp">

        <TextView
            android:id="@+id/tv_data_send_text"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:scrollbarFadeDuration="200"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:background="@drawable/tv_border"/>

        <LinearLayout
            android:id="@+id/ll_send_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/et_send_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPersonName"
                android:focusable="true"/>

            <Button
                android:id="@+id/btn_send_text"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/send_data"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
