<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.xkw.bluetooth_data.TextFragment">

    <!--折线图-->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1_draw"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp">

    </com.github.mikephil.charting.charts.LineChart>

    <LinearLayout
        android:id="@+id/ll_send_field_draw"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_marginStart="8sp"
        android:layout_marginEnd="8sp"
        android:layout_marginBottom="8sp">

        <TextView
            android:id="@+id/tv_data_send_draw"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="2"
            android:textSize="15sp"
            android:scrollbarFadeDuration="200"
            android:scrollbarStyle="outsideOverlay"
            android:scrollbars="vertical"
            android:background="@drawable/tv_border"/>

        <LinearLayout
            android:id="@+id/ll_send_draw"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_send_draw"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/btn_send_draw"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/send_data"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
